<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 设置使用权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplicationNews"
        tools:targetApi="31">
        <activity
            android:name=".ActivityControl.CollectList"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.UpdatePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.HistoryListActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityControl.NewsDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ApplicationNews.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>